@section Breadcrumbs{
    <ol class="breadcrumb navbar-breadcrumb">
        <li>Vehicles</li>
    </ol>
}

<div class="side-body padding-top">
    <div class="card card-success">
        <div class="card-header" style="background-color:#22A7F0">
            <div class="card-title">
                <div class="title" style="padding:10px"><i class="fa fa-user" style="padding-right:10px"></i>Vehicle List</div>
            </div>
            <div class="card-title" style="float:right">
                <a href="/Account/VehicleRegister">
                    <div class="card green summary-inline">
                        <div class="title" style="padding:10px"><i class="fa fa-plus" style="padding-right:10px"></i>Register Vehicle</div>
                    </div>
                </a>
            </div>
            <div class="clear-both"></div>
        </div>
        <style type="text/css">
            td {
                padding: 10px 10px 10px 10px;
            }
        </style>
        <table style="width:100%" border="1">
            <thead>
                <tr>
                    <td>
                        <span style="font-weight:bold">License Plate</span>
                    </td>
                    <td>
                        <span style="font-weight:bold">Brand</span>
                    </td>
                    <td>
                        <span style="font-weight:bold">Model</span>
                    </td>
                    <td>
                        <span style="font-weight:bold">OBD ID</span>
                    </td>
                    <td align="center">
                        <span style="font-weight:bold">Actions</span>
                    </td>
                </tr>
            </thead>
            <tbody>
                @foreach (var vehicle in Model.vehicle_list)
                {
                    <tr>
                        <td>
                            @vehicle.lic_no
                        </td>
                        <td>
                            @vehicle.brand
                        </td>
                        <td>
                            @vehicle.v_model
                        </td>
                        <td>
                            @vehicle.device_no
                        </td>
                        <td align="center">
                            <a href="@Url.Action("EditVehicle", "Account", new { vehicleid = vehicle.id })">
                                <div class="card green summary-inline" style="width:25%;display:inline-block;padding:2%;margin-left:5%">
                                    <div class="title">Edit</div>
                                </div>
                            </a>
                            <a href="@Url.Action("DeleteVehicle", "Account", new { vehicleid = vehicle.id })" onclick="return confirm('Are you sure you want to delete this vehicle ?')">
                                <div class="card green summary-inline" style="width:25%;display:inline-block;padding:2%;margin-right:5%">
                                    <div class="title">Delete</div>
                                </div>
                            </a>
                        </td>
                    </tr>
                                }
            </tbody>
        </table>
    </div>
</div>