@model Telematics.Models.VehicleRegisterViewModel
@section Breadcrumbs{
    <ol class="breadcrumb navbar-breadcrumb">
        <li>Vehicle > Edit</li>
    </ol>
}


<div class="side-body padding-top">

    @using (Html.BeginForm("EditVehicle", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Edit account information</h4>
        <hr />
        @Html.ValidationSummary("")
        @Html.HiddenFor(m => m.id, new { @Value = Model.id });
        <div class="form-group">
            @Html.LabelFor(m => m.LicensePlateNumber, new { @class = "col-md-2 control-label" })
            <div class="col-md-5">
                @Html.TextBoxFor(m => m.LicensePlateNumber, new { @Value = Model.LicensePlateNumber, @class= "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Brand, new { @class = "col-md-2 control-label" })
            <div class="col-md-5">
                @Html.PasswordFor(m => m.Brand, new { @Value = Model.Brand, @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.VehicleModel, new { @class = "col-md-2 control-label" })
            <div class="col-md-5">
                @Html.TextBoxFor(m => m.VehicleModel, new { @Value = Model.VehicleModel, @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.DeviceNo, new { @class = "col-md-2 control-label" })
            <div class="col-md-5">
                @Html.TextBoxFor(m => m.DeviceNo, new { @Value = Model.DeviceNo, @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Update" />
            </div>
        </div>
    }
</div>
